# ===========================================
# Конфигурация LM Studio API
# ===========================================

# Базовый URL LM Studio (по умолчанию)
LM_STUDIO_BASE_URL=http://localhost:1234/v1

# Название модели (как отображается в LM Studio)
LM_STUDIO_MODEL=qwen3-vl-8b

# ===========================================
# Настройки генерации LLM
# ===========================================

# Температура (0.0-1.0): ниже = точнее, выше = креативнее
LLM_TEMPERATURE=0.5

# Максимальное количество токенов в ответе
LLM_MAX_TOKENS=2048

# ===========================================
# Настройки ChromaDB (векторная БД)
# ===========================================

# Путь к хранилищу векторной БД
CHROMA_PERSIST_DIR=./data/chroma_db

# Название коллекции для учебных материалов
CHROMA_COLLECTION=python_tutorials

